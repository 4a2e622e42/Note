<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/sheetContainer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="#171c26"
        android:padding="20dp"
        >


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                >


                <ImageView
                    android:id="@+id/blueCircle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/blue_circle"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/yellowCircle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/yellow_circle"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/whiteCircle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/white_circle"
                    app:tint="@color/black"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/purpleCircle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/purpule_circle"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/greenCircle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/green_circle"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/orangeCircle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/orange_circle"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/blackCircle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/black_circle"
                    android:layout_marginStart="15dp"
                    app:tint="@color/white"
                    android:layout_marginTop="15dp" />



            </LinearLayout>

        </HorizontalScrollView>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_delete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/deleteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/manrope_regular"
                android:text="Delete Note"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_baseline_share_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/shareText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/manrope_regular"
                android:text="Share"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</layout>